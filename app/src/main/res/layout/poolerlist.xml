<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"/>
    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@+id/tName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/sAdd"
        android:layout_below="@+id/tName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Address:"/>
    <TextView
        android:id="@+id/address"
        android:layout_toRightOf="@id/sAdd"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dAdd"
        android:layout_below="@+id/sAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Address:"/>
    <TextView
        android:id="@+id/destinationAdd"
        android:layout_toRightOf="@+id/dAdd"
        android:layout_below="@+id/sAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tPhone"
        android:layout_below="@+id/dAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No:"/>
    <TextView
        android:id="@+id/phone"
        android:layout_toRightOf="@id/tPhone"
        android:layout_below="@+id/dAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/accept"
        android:layout_below="@id/tPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_marginLeft="200dp"
        android:layout_below="@id/tPhone"
        android:id="@+id/reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"/>

</RelativeLayout>